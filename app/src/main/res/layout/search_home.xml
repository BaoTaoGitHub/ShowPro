<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:minHeight="@dimen/dimen_27_5_dp"
        android:background="@drawable/shape_search"
        android:layout_marginLeft="@dimen/dimen_10_dp"
        android:layout_marginRight="@dimen/dimen_10_dp"
        android:gravity="center_vertical"
        >
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:button="@null"
            android:drawableLeft="@mipmap/ico_search"
            android:drawablePadding="@dimen/dimen_1_dp"
            android:text="@string/search"
            android:layout_marginLeft="@dimen/dimen_12_dp"
            android:textColor="@color/grey_search"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_0_5_dp"
        android:background="@color/grey_line"
        android:layout_marginTop="@dimen/dimen_5_dp"
        />
</LinearLayout>